<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Listings:</h3>
            <form method="POST" action="/listings/<%=listing._id %>?_method=PUT " novalidate  class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input value="<%=listing.title%>" type="text" name="listing[title]" class="form-control" required class="needs-validation">
                    <div class="valid-feedback">Nice Title</div>
                </div>
                <br>
                <br>
                <div class="mb-3">
                    <label for="title" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please enter short description</div>
                </div>
                <br>
                <br>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input value="<%=listing.image%>" type="text" name="listing[image]" class="form-control" required>
                </div>
                <br>
                <br>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input value="<%=listing.price%>"  name="listing[price]" class="form-control" required>
                        <div class="invalid-feedback">Enter valid price</div>
                    </div>
                    <br>
                    <br>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input value="<%=listing.country%>" type="text" name="listing[country]" class="form-control" required>
                        <div class="invalid-feedback">Enter valid country name</div>
                    </div>
                    <br>
                    <br>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input value="<%=listing.location%>" type="text" name="listing[location]" class="form-control" required>
                    <div class="invalid-feedback">Enter valid location name</div>
                </div>
                
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>