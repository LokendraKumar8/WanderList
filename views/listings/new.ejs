<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>New Listings:</h3>
                <br>
                <br>
                <form method="POST" action="/listings" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input placeholder="Enter Title" type="text" name="listing[title]" class="form-control" required>
                        <div class="valid-feedback">Nice Title</div>
                    </div>
                    <br>
                    <br>
                    <div class="mb-3">
                        <label for="decription" class="form-label">Description</label>
                        <textarea placeholder="Enter Description" name="listing[description]"
                            class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter short description</div>
                    </div>
                    <br>
                    <br>
                    <div>
                        <label for="image" class="form-label">Image Link</label>
                        <input placeholder="Enter image URL/Link" type="text" name="listing[image]"
                            class="form-control">
                    </div>
                    <br>
                    <br>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input placeholder="Enter Price" name="listing[price]" class="form-control" required>
                            <div class="invalid-feedback">Enter valid price</div>
                        </div>
                        <br>
                        <br>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input placeholder="Enter country" type="text" name="listing[country]" class="form-control" required>
                            <div class="invalid-feedback">Enter valid country name</div>
                        </div>
                        <br>
                        <br>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input placeholder="Enter Location" type="text" name="listing[location]" class="form-control" required>
                        <div class="invalid-feedback">Enter valid location name</div>
                    </div>
                    <br>
                    <br>
                    <button class="btn btn-dark add-btn">Add</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>
    </body>